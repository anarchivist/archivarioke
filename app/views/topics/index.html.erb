<h1>Suggestions</h1>

<table>
  <tr>
    <th></th>
    <th>When discussing...</th>
    <th>Waynebot should say...</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= link_to '+1', votes_path(:topic_id => topic.id), :method => :post %></td> 
    <td><%= link_to(topic.title, topic) %></td>
    <td><%= topic.description %></td>
    <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    <td><%= link_to 'Erase', topic, confirm: 'Really delete this suggestion?', method: :delete %></td>
    <td><%= pluralize(topic.votes.length, "Vote") %></td>
  </tr>
<% end %>
</table>

